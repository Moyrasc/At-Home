extends ../layout/index

block contenido 
    div.py-10 
        h1.text-4xl.my-8.font-extrabold.text-center At 
            span.font-normal Home
        h2.text-center.text-2xl.font-extrabold= pagina 

        div.mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Email" type="email" name="email")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Password" type="password" name="password")

                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/registro") ¿No tienes cuenta? Crea una 
                        a.text-gray-500.text-xs(href="/auth/recuperar-password") Olvide mi Password    

                    input( class="w-full bg-indigo-700 hover:bg-indigo-500 text-white font-bold py-2 cursor-pointer rounded-md" type="submit" value="Iniciar Sesión")  

